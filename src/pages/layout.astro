---
import "../styles/index.css";

const title = "Agustin Marchetti - Provincias Unidas";
const description =
  "Bienvenido a la página oficial de mi candidatura a Diputado. Aquí encontrarás mis propuestas, proyectos y compromisos para construir un futuro mejor. Te invito a conocer mi trabajo y a ser parte del cambio.";
const url = "https://agustinmarchetti.netlify.app/"; // cambia por tu dominio real
const image = "https://cdn.pixabay.com/photo/2025/06/08/16/06/horse-9648183_960_720.jpg"; // fallback imagen
---

<html lang="es">
	<head>
		<!-- Metadatos básicos -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />

		<!-- Favicon -->
		<link rel="icon" href="/favicon.ico" sizes="any" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />

		<!-- SEO -->
		<link rel="canonical" href={url} />
		<meta name="robots" content="index, follow" />

		<!-- Open Graph (Facebook, LinkedIn, etc.) -->
		<meta property="og:type" content="video.other" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={url} />
		<meta property="og:image" content={image} /> <!-- fallback -->
		<meta property="og:site_name" content="Agustin Marchetti" />

		<!-- Twitter Cards -->
		<meta name="twitter:card" content="player" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={image} />

		<!-- Accesibilidad / PWA -->
		<meta name="theme-color" content="#0f172a" />
		<link rel="manifest" href="/site.webmanifest" />

		<!-- Tipografías -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap"
			rel="stylesheet"
		/>
	</head>

	<body class="animated-gradient">
		<main class="container">
			<slot />
		</main>
	</body>
</html>
