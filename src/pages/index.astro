---
import Header from "../components/home/Header.astro";
import Socials from "../components/home/Socials.astro";
import Partido from "../components/home/Partido.astro";
import Layout from "./layout.astro";
import Card from "../components/home/Card.astro";
import Footer from "../components/Footer.astro";

// importamos el JSON
import data from "../data/data.json";
import "../styles/index.css";
---

<Layout>
  <Header />
  <Socials />
  <!-- <Partido /> -->

  {
    data.map(item => (
      <Card
        title={item.titulo}
        subtitle={item.etiquetas.join(", ")}
        videoUrl={item.video}
        description={item.secciones[0].contenido}
        buttonText="Ver mÃ¡s"
        buttonLink={`/${item.id}`}
      />
    ))
  }

  <Footer />
</Layout>
