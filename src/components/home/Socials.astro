---
// src/components/home/Socials.astro
const socials = [
    { name: "Twitter", url: "https://twitter.com/", icon: "🐦" },
    { name: "Facebook", url: "https://facebook.com/", icon: "📘" },
    { name: "Instagram", url: "https://instagram.com/", icon: "📸" },
    { name: "LinkedIn", url: "https://linkedin.com/", icon: "💼" },
];
---

<div class="socials">
    {socials.map(social => (
        <a
            class="socials__item"
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
        >
            <span class="socials__icon">{social.icon}</span>
            <span class="socials__name">{social.name}</span>
        </a>
    ))}
</div>

<style>
.socials {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.socials__item {
  text-decoration: none;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: bold;
  transition: background 0.2s ease;
}

.socials__item:hover {
  background: #e0e0e0;
}

.socials__icon {
  font-size: 1.2rem;
}

.socials__name {
  font-size: 1rem;
}

@media (max-width: 767.98px) {
    .socials{
        width:100%;
        flex-direction:column;
        gap:2rem;
    }

    .socials__item{
        padding: 1rem 2rem;
    }

}

</style>
